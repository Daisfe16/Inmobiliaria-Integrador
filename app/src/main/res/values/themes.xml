<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Tema principal -->
    <style name="Theme.Inmobiliaria" parent="Theme.Material3.Light.NoActionBar">

        <!-- ðŸŽ¨ Colores base -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <!-- ðŸ”¹ colorOnPrimary espera un color directo o atributo, no referencia -->
        <item name="colorOnPrimary">?attr/colorOnSurface</item>
        <item name="android:textColor">@color/textPrimary</item>

        <!-- ðŸª¶ TipografÃ­a -->
        <item name="android:fontFamily">@font/montserrat_regular</item>

        <!-- ðŸ”˜ Botones -->
        <item name="android:buttonStyle">@style/Widget.SilverLight.Button</item>

        <!-- âœï¸ EditText -->
        <item name="android:editTextStyle">@style/Widget.SilverLight.EditText</item>

        <!-- ðŸŒˆ Fondo -->
        <item name="android:windowBackground">@drawable/bg_silver_gradient</item>

        <!-- ðŸ“± Barras del sistema -->
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:navigationBarColor">@color/colorPrimary</item>

    </style>

    <!-- Estilo de Botones -->
    <style name="Widget.SilverLight.Button" parent="Widget.Material3.Button">
        <item name="android:background">@drawable/btn_silver</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:fontFamily">@font/montserrat_semibold</item>
    </style>

    <!-- Estilo de EditText -->
    <style name="Widget.SilverLight.EditText" parent="Widget.Material3.TextInputEditText.OutlinedBox">
        <item name="android:textColor">@color/textPrimary</item>
        <!-- ðŸ‘‡ estos deben ir sin el prefijo android: -->
        <item name="boxStrokeColor">@color/colorAccent</item>
        <item name="boxBackgroundColor">@color/white</item>
    </style>


