<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Tema principal -->
    <style name="Theme.Inmobiliaria" parent="Theme.Material3.Light.NoActionBar">

        <!-- 🎨 Colores base -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <!-- 🔹 colorOnPrimary espera un color directo o atributo, no referencia -->
        <item name="colorOnPrimary">?attr/colorOnSurface</item>
        <item name="android:textColor">@color/textPrimary</item>

        <!-- 🪶 Tipografía -->
        <item name="android:fontFamily">@font/montserrat_regular</item>

        <!-- 🔘 Botones -->
        <item name="android:buttonStyle">@style/Widget.SilverLight.Button</item>

        <!-- ✏️ EditText -->
        <item name="android:editTextStyle">@style/Widget.SilverLight.EditText</item>

        <!-- 🌈 Fondo -->
        <item name="android:windowBackground">@drawable/bg_silver_gradient</item>

        <!-- 📱 Barras del sistema -->
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:navigationBarColor">@color/colorPrimary</item>

    </style>

    <!-- Estilo de Botones -->
    <style name="Widget.SilverLight.Button" parent="Widget.Material3.Button">
        <item name="android:background">@drawable/btn_silver</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:fontFamily">@font/montserrat_semibold</item>
    </style>

    <!-- Estilo de EditText -->
    <style name="Widget.SilverLight.EditText" parent="Widget.Material3.TextInputEditText.OutlinedBox">
        <item name="android:textColor">@color/textPrimary</item>
        <!-- 👇 estos deben ir sin el prefijo android: -->
        <item name="boxStrokeColor">@color/colorAccent</item>
        <item name="boxBackgroundColor">@color/white</item>
    </style>


    <!-- En tu archivo themes.xml o styles.xml -->
    <!-- <style name="Theme.Inmobiliaria.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" /> -->
</resources>
