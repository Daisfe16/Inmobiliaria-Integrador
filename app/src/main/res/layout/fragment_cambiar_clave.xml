<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_silver_gradient"
    android:padding="20dp"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Título -->
        <TextView
            android:id="@+id/tvTituloContra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cambiar clave"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="@color/textPrimary"
            android:fontFamily="@font/montserrat_semibold"
            android:layout_marginBottom="20dp" />

        <!-- Contraseña actual -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contraseña actual"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="@color/colorAccent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etContraActual"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:textColor="@color/textSecondary" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Nueva contraseña -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nueva contraseña"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="@color/colorAccent"
            android:layout_marginTop="8dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etContraNueva"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:textColor="@color/textSecondary" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Confirmar nueva contraseña -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirmar nueva contraseña"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="@color/colorAccent"
            android:layout_marginTop="8dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etContraNConfirmar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:textColor="@color/textSecondary" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Botón Confirmar -->
        <Button
            android:id="@+id/btConfirmarContra"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Confirmar"
            android:textAllCaps="false"
            android:background="@drawable/btn_silver"
            android:layout_marginTop="24dp"
            android:textColor="@color/textPrimary"
            android:fontFamily="@font/montserrat_semibold" />

    </LinearLayout>
</ScrollView>